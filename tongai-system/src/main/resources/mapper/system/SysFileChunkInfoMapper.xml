<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tawl.system.mapper.SysFileChunkInfoMapper">

    <resultMap type="SysFileChunkInfo" id="SysFileChunkInfoResult">
        <result property="id"    column="id"    />
        <result property="chunkNumber"    column="chunk_number"    />
        <result property="chunkSize"    column="chunk_size"    />
        <result property="identifier"    column="identifier"    />
        <result property="relativePath"    column="relative_path"    />
        <result property="totalChunks"    column="total_chunks"    />
        <result property="userId"    column="user_id"    />
        <result property="deptId"    column="dept_id"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSysFileChunkInfoVo">
        select a.id, a.chunk_number, a.chunk_size, a.identifier, a.relative_path, a.total_chunks, a.user_id, a.dept_id, a.del_flag, a.create_by, a.create_time, a.update_by, a.update_time, a.remark from
            sys_file_chunk_info a left join sys_dept d on a.dept_id = d.dept_id left join sys_user u on a.user_id = u.user_id
    </sql>

    <select id="selectSysFileChunkInfoList" parameterType="SysFileChunkInfo" resultMap="SysFileChunkInfoResult">
        <include refid="selectSysFileChunkInfoVo"/>
        <where>
            <if test="chunkNumber != null "> and a.chunk_number = #{chunkNumber}</if>
            <if test="chunkSize != null "> and a.chunk_size = #{chunkSize}</if>
            <if test="identifier != null  and identifier != ''"> and a.identifier = #{identifier}</if>
            <if test="relativePath != null  and relativePath != ''"> and a.relative_path = #{relativePath}</if>
            <if test="totalChunks != null "> and a.total_chunks = #{totalChunks}</if>
            <!-- 数据范围过滤 -->
            ${params.dataScope}
        </where>
    </select>

    <select id="selectSysFileChunkInfoById" parameterType="Long" resultMap="SysFileChunkInfoResult">
        <include refid="selectSysFileChunkInfoVo"/>
        where a.id = #{id}
    </select>

    <insert id="insertSysFileChunkInfo" parameterType="SysFileChunkInfo" useGeneratedKeys="true" keyProperty="id">
        insert into sys_file_chunk_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="chunkNumber != null">chunk_number,</if>
            <if test="chunkSize != null">chunk_size,</if>
            <if test="identifier != null and identifier != ''">identifier,</if>
            <if test="relativePath != null and relativePath != ''">relative_path,</if>
            <if test="totalChunks != null">total_chunks,</if>
            <if test="userId != null">user_id,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="chunkNumber != null">#{chunkNumber},</if>
            <if test="chunkSize != null">#{chunkSize},</if>
            <if test="identifier != null and identifier != ''">#{identifier},</if>
            <if test="relativePath != null and relativePath != ''">#{relativePath},</if>
            <if test="totalChunks != null">#{totalChunks},</if>
            <if test="userId != null">#{userId},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateSysFileChunkInfo" parameterType="SysFileChunkInfo">
        update sys_file_chunk_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="chunkNumber != null">chunk_number = #{chunkNumber},</if>
            <if test="chunkSize != null">chunk_size = #{chunkSize},</if>
            <if test="identifier != null and identifier != ''">identifier = #{identifier},</if>
            <if test="relativePath != null and relativePath != ''">relative_path = #{relativePath},</if>
            <if test="totalChunks != null">total_chunks = #{totalChunks},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>
    <delete id="deleteSysFileChunkInfoById" parameterType="Long">
        update sys_file_chunk_info set del_flag = '2' where id = #{id}
    </delete>

    <delete id="deleteSysFileChunkInfoByIds" parameterType="String">
        update sys_file_chunk_info set del_flag = '2' where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>